{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
}